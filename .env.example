# 服务器配置
PORT=3000
NODE_ENV=development
HOST=localhost

# 数据库配置
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=todolist_pro
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_STORAGE=./database/todolist.db

# JWT配置
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# 加密配置
BCRYPT_ROUNDS=12

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@todolistpro.com
FROM_NAME=TodoList Pro

# 微信支付配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_MCH_ID=your_merchant_id
WECHAT_API_KEY=your_wechat_api_key
WECHAT_CERT_PATH=./certs/wechat/apiclient_cert.pem
WECHAT_KEY_PATH=./certs/wechat/apiclient_key.pem
WECHAT_NOTIFY_URL=https://yourdomain.com/api/payment/wechat/notify

# 支付宝配置
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY_PATH=./certs/alipay/app_private_key.pem
ALIPAY_PUBLIC_KEY_PATH=./certs/alipay/alipay_public_key.pem
ALIPAY_NOTIFY_URL=https://yourdomain.com/api/payment/alipay/notify
ALIPAY_RETURN_URL=https://yourdomain.com/payment/success
ALIPAY_GATEWAY=https://openapi.alipay.com/gateway.do

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Redis配置 (可选，用于缓存和会话)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 应用配置
APP_NAME=TodoList Pro
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001
ADMIN_EMAIL=admin@todolistpro.com

# 安全配置
CORS_ORIGIN=http://localhost:3001,http://127.0.0.1:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 会员配置
FREE_TASK_LIMIT=10
PREMIUM_MONTHLY_PRICE=9.9
PREMIUM_YEARLY_PRICE=99
PREMIUM_LIFETIME_PRICE=299

# 推送通知配置
PUSH_NOTIFICATION_KEY=your_push_notification_key
FCM_SERVER_KEY=your_fcm_server_key

# 第三方服务配置
SENTRY_DSN=your_sentry_dsn_for_error_tracking
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# 开发配置
DEBUG=true
VERBOSE_LOGGING=true
ENABLE_SWAGGER=true