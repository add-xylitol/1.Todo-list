{
  "name": "todolist-pro",
  "version": "1.0.0",
  "description": "Professional TodoList application with payment integration",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "dev": "nodemon server/app.js",
    "serve": "http-server . -p 3001 -c-1",
    "build": "npm run build:web && npm run build:mobile && npm run build:desktop",
    "build:web": "echo 'Building PWA...'",
    "build:mobile": "cordova build",
    "build:desktop": "electron-builder",
    "init:db": "node server/scripts/initDatabase.js",
    "test": "jest",
    "lint": "eslint ."
  },
  "keywords": [
    "todolist",
    "productivity",
    "task-management",
    "pwa",
    "mobile-app"
  ],
  "author": "TodoList Pro Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "sequelize": "^6.35.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "multer": "^1.4.5-lts.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "socket.io": "^4.7.4",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "qrcode": "^1.5.3",
    "axios": "^1.6.2",
    "crypto": "^1.0.1",
    "moment": "^2.29.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "http-server": "^14.1.1",
    "electron": "^27.1.3",
    "electron-builder": "^24.8.1",
    "cordova": "^12.0.0",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/todolist-pro.git"
